@model IEnumerable<KhumaloCraft.Models.OrderAdmin>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/Products">Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Orders/Admin">Order Status</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/OrderRequests">Order Requests</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/AppRoles/">Roles</a>
                </li>

            </ul>
        </div>
    </div>
</nav>

<div class="container-products">
    <h2>Admin - Orders</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>User Email</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate</td>
                    <td>@order.UserEmail</td>
                    <td>@order.Status</td>
                    <td>
                        @if (order.Status == "Pending")
                        {
                            <a asp-action="ProcessOrder" asp-route-id="@order.OrderId" class="btn btn-primary">Approve Order</a>
                        }
                        else
                        {
                            <span>Approved</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>