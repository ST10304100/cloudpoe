@{
    ViewBag.Title = "Contact Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - KhumaloCraft Emporium</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            color: #212529;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
        }

        .contact-details {
            margin-bottom: 50px;
        }

            .contact-details h2 {
                font-size: 2.5rem;
                font-weight: 700;
                margin-bottom: 30px;
                color: #007bff;
            }

        .contact-info {
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

            .contact-info p {
                margin: 0;
                padding: 5px 0;
            }

            .contact-info i {
                margin-right: 10px;
                color: #007bff;
            }

        .contact-form {
            margin-bottom: 50px;
        }

            .contact-form h2 {
                font-size: 2.5rem;
                font-weight: 700;
                margin-bottom: 30px;
                color: #007bff;
            }

        .form-control {
            border-radius: 0;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: none;
            }

        .btn-contact {
            background-color: #007bff;
            color: #fff;
            border-radius: 0;
            padding: 10px 20px;
            font-size: 1.2rem;
            transition: background-color 0.3s;
        }

            .btn-contact:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="contact-details">
            <h2>Contact Details</h2>
            <div class="contact-info">
                <p><i class="fas fa-envelope"></i> Email: <a href="mailto:KhumaloCraft@gmail.com">KhumaloCraft@gmail.com</a></p>
                <p><i class="fas fa-phone"></i> Phone: +27 (081) 706 9211</p>
                <p><i class="fas fa-map-marker-alt"></i> Address: 5 Lakeview Avenue, Artisanville, World</p>
            </div>
        </div>

        <div class="contact-form">
            <h2>Get in Touch</h2>
            <form>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Your Name" required />
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Your Email" required />
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="5" placeholder="Your Message" required></textarea>
                </div>
                <button type="submit" class="btn btn-contact">Send Message</button>
            </form>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
