@model IEnumerable<KhumaloCraft.Models.OrderHistory>

@{
    ViewData["Title"] = "Order History";
}
<div class="container-products">
    <h2>Order History</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Product Name</th>
                <th>Product Price</th>
                <th>Order Date</th>
                <th>Order Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.ProductName</td>
                    <td>R @order.ProductPrice.ToString("0.00")</td>
                    <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                    <td>@order.OrderStatus</td>
                </tr>
            }
        </tbody>
    </table>
</div>